<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_root"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_thumb"
        tools:layout_height="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_trans_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_room_status"
            android:gravity="center"
            android:layout_gravity="start"
            android:text="直播状态"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_live_status"
            tools:ignore="SmallSp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_live" />

        <TextView
            android:id="@+id/tv_live_heat"
            android:text="2.5k"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            android:padding="4dp"
            android:background="@drawable/shape_live_heat"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_heat" />

        <LinearLayout
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_gravity="end"
            android:background="@drawable/shape_live_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:layout_gravity="center"
                android:layout_width="26.84dp"
                android:layout_height="10.24dp"
                android:src="@drawable/ic_plat_dy" />

            <TextView
                android:id="@+id/tv_live_cate"
                android:text="热门游戏"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="10sp"
                android:padding="4dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:padding="8dp"
        android:background="@drawable/shape_trans_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lzm.lightLive.view.RoundImageView
            android:id="@+id/iv_avatar"
            android:src="@color/white"
            app:corner_radius="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="46dp"
            android:layout_height="46dp"/>

        <TextView
            android:id="@+id/tv_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/iv_avatar"
            android:gravity="center"
            android:text="主播名称"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_room_name"
            android:gravity="center"
            android:text="房间名"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@id/tv_host_name"
            android:layout_toEndOf="@+id/iv_avatar"
            android:layout_below="@id/tv_host_name"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.lzm.lightLive.view.DrawableCenterTextView
            android:id="@+id/tv_room_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tv_room_name"
            android:gravity="center"
            android:textSize="12sp"
            android:text="房间号"
            android:drawableStart="@drawable/ic_home"
            android:drawablePadding="5dp"
            android:textColor="@color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>